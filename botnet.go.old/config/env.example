# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=info

# Registry Service Configuration
PORT=8080
DATA_DIR=./data
MAX_NODES=10000
ALLOWED_DOMAINS=*

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Feature Flags
ENABLE_REPLICATION=true
ENABLE_MICROPAYMENTS=false
ENABLE_CHALLENGES=true

# Worldcoin Integration
WORLDCOIN_APP_ID=your-worldcoin-app-id
WORLDCOIN_ACTION_ID=your-worldcoin-action-id
WORLDCOIN_API_KEY=your-worldcoin-api-key

# Node Configuration (for running as a node)
NODE_DOMAIN=your-domain.com
NODE_PORT=8081
REGISTRY_URL=https://botnet.airon.games
REGISTRY_TOKEN=your-registry-token

# Node Identity (leave blank for auto-generation)
NODE_ID=
PRIVATE_KEY=
PUBLIC_KEY=

# OpenClaw Integration
OPENCLAW_URL=https://your-openclaw-instance.com
OPENCLAW_TOKEN=your-openclaw-token

# Node Feature Flags
ENABLE_AGENT=true